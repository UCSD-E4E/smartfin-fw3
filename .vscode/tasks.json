{
    "version": "2.0.0",
    "tasks": [
        {
        "type": "shell",
        "label": "Compile Google Tests",
        "command": "cmake .. -DCMAKE_BUILD_TYPE=Debug && make",
        "options": {
            "cwd": "${workspaceRoot}/tests/build"
        },
        "group": {
            "kind": "build",
            "isDefault": true
        }
        },
        {
            "type": "shell",
            "label": "Compile Google Tests From Script",
            "command": "../run_gtests --debug -b",
            "options": {
                "cwd": "${workspaceRoot}/tests/build"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
            }
    ]
}